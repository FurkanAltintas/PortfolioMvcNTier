@model Portfolio.ENTITY.Concrete.About

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/DashboardLayout.cshtml";
}

@using (Html.BeginForm("Create", "About", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Başlık" })
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextAreaFor(x => x.Description, 10, 0, new { @class = "form-control", placeholder = "Açıklama" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control", type = "file" })
        @Html.ValidationMessageFor(x => x.Image, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-outline-danger">Create About</button>
    </div>
}