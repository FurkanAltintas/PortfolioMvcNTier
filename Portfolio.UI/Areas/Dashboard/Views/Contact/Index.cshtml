@model List<Portfolio.ENTITY.Concrete.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/DashboardLayout.cshtml";

    int i = 0;
}

@if (Model.Count() == 0)
{
    @Html.Partial("Alert")
}

<div class="section-wrapper">
    <div class="table-responsive">
        <table class="table mg-b-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Mail</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.CreateDate.ToShortDateString()</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>