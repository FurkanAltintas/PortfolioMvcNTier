@model Portfolio.ENTITY.Concrete.Work

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Dashboard/Views/Shared/DashboardLayout.cshtml";
}

@using (Html.BeginForm("Process", "Work", FormMethod.Post))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Title" })
    </div>

    <div class="form-group">
        @Html.TextAreaFor(x => x.Desription, 5, 0, new { @class = "form-control", placeholder = "Description" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-outline-danger">Edit Work</button>
    </div>
}