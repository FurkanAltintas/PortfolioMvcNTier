@model Portfolio.UI.ViewModels.Slider

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="hero-full-container background-image-container white-text-container" style="background-image: url('@Model.Background.Image')">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="hero-full-wrapper">
                    <div class="text-content">
                        <h1>
                            Hello,<br>
                                  <span id="typed-strings">
                                      @foreach (var item in Model.Degree)
                                      {
                                          <span>@item.Name</span>
                                      }
                                  </span>
                            <span id="typed"></span>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>