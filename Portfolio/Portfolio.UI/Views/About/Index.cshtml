@model Portfolio.ENTITY.Concrete.About

@{
    ViewBag.Title = "About me";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="section-container">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-container-spacer text-center">
                    <h1 class="h2">01 : @ViewBag.Title</h1>
                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <h3 style="font-size: 30px; color: brown;">@Model.Title</h3>
                                <hr>

                                @Html.Raw(Model.Description)
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <img src="@Model.Image" class="img-responsive" alt="">
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>